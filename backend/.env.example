# Variables de entorno para el backend - Carrito de Compras API
# Copie este archivo como .env y configure las variables según su entorno

# === CONFIGURACIÓN DE AMBIENTE ===
BACKEND_ENVIRONMENT=development
BACKEND_ENVIRONMENT_IS_PRODUCTION=false
BACKEND_ENVIRONMENT_DEBUG=true

# === CONFIGURACIÓN DE API ===
BACKEND_API_BASE_URL=https://localhost:7005/api
BACKEND_API_PORT=7005
BACKEND_API_VERSION=v1
BACKEND_API_ENABLE_SWAGGER=true

# === CONFIGURACIÓN DE BASE DE DATOS ===
BACKEND_DATABASE_CONNECTION_STRING=Data Source=localhost;Initial Catalog=CarritoComprasDB_Dev;Integrated Security=true;TrustServerCertificate=true;
BACKEND_DATABASE_PROVIDER=SqlServer
BACKEND_DATABASE_COMMAND_TIMEOUT=30

# === CONFIGURACIÓN DE AUTENTICACIÓN JWT ===
BACKEND_JWT_SECRET=dev-super-secret-key-for-development-only-not-for-production-use-must-be-at-least-32-characters
BACKEND_JWT_ISSUER=CarritoComprasAPI-Dev
BACKEND_JWT_AUDIENCE=CarritoComprasApp-Dev
BACKEND_JWT_EXPIRATION_MINUTES=120

# === CONFIGURACIÓN DE CACHÉ ===
BACKEND_CACHE_PROVIDER=InMemory
BACKEND_CACHE_CONNECTION_STRING=
BACKEND_CACHE_EXPIRATION_MINUTES=30

# === CONFIGURACIÓN DE SEGURIDAD ===
BACKEND_SECURITY_RATE_LIMIT_REQUESTS=1000
BACKEND_SECURITY_RATE_LIMIT_WINDOW=00:01:00

# === CONFIGURACIÓN DE CARACTERÍSTICAS ===
BACKEND_FEATURES_ENABLE_DETAILED_ERRORS=true
BACKEND_FEATURES_ENABLE_SENSITIVE_DATA_LOGGING=true

# === SERVICIOS EXTERNOS ===
BACKEND_PAYMENT_SERVICE_URL=https://api-dev.payment-provider.com
BACKEND_PAYMENT_SERVICE_API_KEY=dev-payment-api-key-not-secret
BACKEND_NOTIFICATION_SERVICE_URL=https://api-dev.notification-service.com
BACKEND_NOTIFICATION_SERVICE_API_KEY=dev-notification-api-key-not-secret

# === CONFIGURACIÓN ESPECÍFICA POR AMBIENTE ===

