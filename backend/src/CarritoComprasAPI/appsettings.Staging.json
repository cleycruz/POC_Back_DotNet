{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  }, 
  "Environment": {
    "Name": "Staging",
    "IsProduction": false,
    "Debug": false
  },
  "Api": {
    "Version": "v1",
    "Title": "Carrito Compras API - Staging",
    "Description": "API REST para sistema de carrito de compras - Entorno de Staging",
    "BaseUrl": "#{STAGING_API_BASE_URL}#",
    "Port": "#{STAGING_API_PORT}#",
    "EnableSwagger": true,
    "EnableCors": true,
    "AllowedOrigins": [
      "#{STAGING_FRONTEND_URL}#"
    ]
  },
  "Database": {
    "ConnectionString": "#{STAGING_DB_CONNECTION_STRING}#",
    "Provider": "SqlServer",
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true,
    "CommandTimeout": 30,
    "MaxRetryCount": 3
  },
  "Authentication": {
    "JwtSecret": "#{STAGING_JWT_SECRET}#",
    "JwtIssuer": "#{STAGING_JWT_ISSUER}#",
    "JwtAudience": "#{STAGING_JWT_AUDIENCE}#",
    "JwtExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Cache": {
    "Provider": "Redis",
    "ConnectionString": "#{STAGING_REDIS_CONNECTION_STRING}#",
    "DefaultExpirationMinutes": 30,
    "EnableDistributedCache": true
  },
  "Security": {
    "EnableRateLimiting": true,
    "RateLimitRequests": 200,
    "RateLimitWindow": "00:01:00",
    "EnableRequestLogging": true,
    "EnableResponseCompression": true
  },
  "Features": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false
  },
  "External": {
    "PaymentService": {
      "BaseUrl": "#{STAGING_PAYMENT_SERVICE_URL}#",
      "ApiKey": "#{STAGING_PAYMENT_API_KEY}#",
      "TimeoutSeconds": 30
    },
    "NotificationService": {
      "BaseUrl": "#{STAGING_NOTIFICATION_SERVICE_URL}#",
      "ApiKey": "#{STAGING_NOTIFICATION_API_KEY}#",
      "TimeoutSeconds": 15
    }
  }
}
