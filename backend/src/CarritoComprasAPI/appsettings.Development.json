{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information"
    }
  },
  "Environment": {
    "Name": "Development",
    "IsProduction": "{{ENVIRONMENT_IS_PRODUCTION}}",
    "Debug": "{{ENVIRONMENT_DEBUG}}"
  },
  "Api": {
    "Version": "{{API_VERSION}}",
    "Title": "Carrito Compras API - Development",
    "Description": "API REST para sistema de carrito de compras - Entorno de Desarrollo",
    "BaseUrl": "{{API_BASE_URL}}",
    "Port": "{{API_PORT}}",
    "EnableSwagger": "{{API_ENABLE_SWAGGER}}",
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Database": {
    "ConnectionString": "{{DATABASE_CONNECTION_STRING}}",
    "Provider": "{{DATABASE_PROVIDER}}",
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "CommandTimeout": "{{DATABASE_COMMAND_TIMEOUT}}",
    "MaxRetryCount": 3
  },
  "Authentication": {
    "JwtSecret": "{{JWT_SECRET}}",
    "JwtIssuer": "{{JWT_ISSUER}}",
    "JwtAudience": "{{JWT_AUDIENCE}}",
    "JwtExpirationMinutes": "{{JWT_EXPIRATION_MINUTES}}",
    "RefreshTokenExpirationDays": 30
  },
  "Cache": {
    "Provider": "{{CACHE_PROVIDER}}",
    "ConnectionString": "{{CACHE_CONNECTION_STRING}}",
    "DefaultExpirationMinutes": "{{CACHE_EXPIRATION_MINUTES}}",
    "EnableDistributedCache": false
  },
  "Security": {
    "EnableRateLimiting": false,
    "RateLimitRequests": "{{SECURITY_RATE_LIMIT_REQUESTS}}",
    "RateLimitWindow": "{{SECURITY_RATE_LIMIT_WINDOW}}",
    "EnableRequestLogging": true,
    "EnableResponseCompression": false
  },
  "Features": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": "{{FEATURES_ENABLE_DETAILED_ERRORS}}",
    "EnableSensitiveDataLogging": "{{FEATURES_ENABLE_SENSITIVE_DATA_LOGGING}}"
  },
  "External": {
    "PaymentService": {
      "BaseUrl": "{{PAYMENT_SERVICE_URL}}",
      "ApiKey": "{{PAYMENT_SERVICE_API_KEY}}",
      "TimeoutSeconds": 60
    },
    "NotificationService": {
      "BaseUrl": "{{NOTIFICATION_SERVICE_URL}}",
      "ApiKey": "{{NOTIFICATION_SERVICE_API_KEY}}",
      "TimeoutSeconds": 30
    }
  }
}
