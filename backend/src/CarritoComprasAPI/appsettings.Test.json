{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    }
  },
  "Environment": {
    "Name": "Test",
    "IsProduction": false,
    "Debug": false
  },
  "Api": {
    "Version": "v1",
    "Title": "Carrito Compras API - Test",
    "Description": "API REST para sistema de carrito de compras - Entorno de Testing",
    "BaseUrl": "http://localhost:5000/api",
    "Port": "5000",
    "EnableSwagger": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:4201",
      "http://localhost:5001"
    ]
  },
  "Database": {
    "ConnectionString": "Data Source=localhost;Initial Catalog=CarritoComprasDB_Test;Integrated Security=true;TrustServerCertificate=true;",
    "Provider": "SqlServer",
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 15,
    "MaxRetryCount": 1
  },
  "Authentication": {
    "JwtSecret": "test-secret-key-for-automated-testing-only",
    "JwtIssuer": "CarritoComprasAPI-Test",
    "JwtAudience": "CarritoComprasApp-Test",
    "JwtExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 1
  },
  "Cache": {
    "Provider": "InMemory",
    "ConnectionString": "",
    "DefaultExpirationMinutes": 5,
    "EnableDistributedCache": false
  },
  "Security": {
    "EnableRateLimiting": false,
    "RateLimitRequests": 10000,
    "RateLimitWindow": "00:01:00",
    "EnableRequestLogging": false,
    "EnableResponseCompression": false
  },
  "Features": {
    "EnableMetrics": false,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false
  },
  "External": {
    "PaymentService": {
      "BaseUrl": "https://mock-payment-service.test",
      "ApiKey": "test-payment-api-key",
      "TimeoutSeconds": 10
    },
    "NotificationService": {
      "BaseUrl": "https://mock-notification-service.test",
      "ApiKey": "test-notification-api-key",
      "TimeoutSeconds": 5
    }
  }
}
