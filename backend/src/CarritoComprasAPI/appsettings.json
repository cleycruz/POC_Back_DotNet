{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Environment": {
    "Name": "Production",
    "IsProduction": true,
    "Debug": false
  },
  "Api": {
    "Version": "v1",
    "Title": "Carrito Compras API",
    "Description": "API REST para sistema de carrito de compras",
    "BaseUrl": "#{PROD_API_BASE_URL}#",
    "Port": "#{PROD_API_PORT}#",
    "EnableSwagger": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "#{PROD_FRONTEND_URL}#"
    ]
  },
  "Database": {
    "ConnectionString": "#{PROD_DB_CONNECTION_STRING}#",
    "Provider": "SqlServer",
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3
  },
  "Authentication": {
    "JwtSecret": "#{PROD_JWT_SECRET}#",
    "JwtIssuer": "#{PROD_JWT_ISSUER}#",
    "JwtAudience": "#{PROD_JWT_AUDIENCE}#",
    "JwtExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Cache": {
    "Provider": "Redis",
    "ConnectionString": "#{PROD_REDIS_CONNECTION_STRING}#",
    "DefaultExpirationMinutes": 60,
    "EnableDistributedCache": true
  },
  "Security": {
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitWindow": "00:01:00",
    "EnableRequestLogging": true,
    "EnableResponseCompression": true
  },
  "Features": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "External": {
    "PaymentService": {
      "BaseUrl": "#{PROD_PAYMENT_SERVICE_URL}#",
      "ApiKey": "#{PROD_PAYMENT_API_KEY}#",
      "TimeoutSeconds": 30
    },
    "NotificationService": {
      "BaseUrl": "#{PROD_NOTIFICATION_SERVICE_URL}#",
      "ApiKey": "#{PROD_NOTIFICATION_API_KEY}#",
      "TimeoutSeconds": 15
    }
  }
}
